##    CHECK FOR BUFFER/STACK OVERFLOWS

#alias multstringRun {#var %2 {$%%2$%%1}; #math NStr {$NStr-1}; #if {$NStr > 0} {multstringRun %1 %2} {}}
#alias multstring {#var %1 {$%%2}; #math NStr {%3 - 1}; multstringRun %2 %1}

#var TenSymbols {1111111111}

multstring HundredSymbols TenSymbols 10
#var HundredSymbolsCorrect {1111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111}

assertEqual LONG_VARIABLE_VALUE HundredSymbols HundredSymbolsCorrect

multstring ThousandSymbols HundredSymbols 10

#var ThousandSymbolsCorrect {}

assertEqual VERY_LONG_VARIABLE_VALUE ThousandSymbols ThousandSymbolsCorrect

#var LongestVar 1
#var LongestVarLength 1
#alias makeLongestVar {#var Temp {1$LongestVar}; #strcmp {$Temp} {$LongestVar} {} {#math LongestVarLength {$LongestVarLength + 1}; #var LongestVar {$Temp}; makeLongestVar}}
makeLongestVar
#var MinBufsize 1850
assertLess BUFFER_SIZE MinBufsize LongestVarLength

